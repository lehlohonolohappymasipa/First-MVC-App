@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this student?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Student Number</dt>
        <dd class="col-sm-10">@Model.StudentNo</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this student?');
        }
    </script>
}